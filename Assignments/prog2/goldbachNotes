n = someNumber

arr = getPrimes(n) => Array of primes



getGoldbach(){
    while (i < j){
        sum = arr[i] + arr[j]
        if (sum == n)
        {
            return arr[i]
        }
        else if (sum > n)
        {
            j = j - 1;
        }
        else
            i = i + 1
    }
}
